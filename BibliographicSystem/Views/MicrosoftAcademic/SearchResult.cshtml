@model List<BibliographicSystem.Models.MicrosoftAcademicArticle>
@Html.ValidationMessage("Empty list")

@if (Model.Count != 0)
{
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <h3>Список статей</h3>
        </div>
    </div>
}

@foreach (var art in Model)
{
    {
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">@art.PaperTitle</h3>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    <li class="list-group-item">@art.PaperTitle</li>
                    <li class="list-group-item">@art.PaperYear</li>
                    <li class="list-group-item">@art.CitationCount</li>
                    
                </ul>
            </div>
        </div>
    }
}