@model string
@{
    ViewBag.Title = "SearchOnMicrosoftAcademic";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "getDataList"
    };
}

<br>
<br>
<br>

@using (Ajax.BeginForm("SearchResult", ajaxOptions))
{
    <div class="row">
        <div class="input-group">
            <input type="text" id="Query" name="Query" class="form-control" placeholder="Поиск на статей  на Microsoft Academic Research">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit">Поиск</button>
            </span>
        </div>
    </div>
    
}

<form id="getDataList"></form>
