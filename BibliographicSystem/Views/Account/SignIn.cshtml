@model BibliographicSystem.Models.LogOnModel
@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form class="form-horizontal" method="post">
                <h2 class="form-signin-heading">Вход в систему</h2>
                <input type="text" id="Email" name="Email" class="form-control" placeholder="E-mail" required autofocus>
                <input type="password" id="Password" name="Password" class="form-control" placeholder="Пароль" required>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="RememberMe"> Запомнить
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Вход в систему</button>
                @Html.ValidationSummary(true)
            </form>
        </div> <!-- col -->
    </div> <!-- row -->
</div> <!--container-->